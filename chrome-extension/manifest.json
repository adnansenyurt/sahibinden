{
  "manifest_version": 3,
  "name": "Detail Scraper (Lite)",
  "version": "1.0.0",
  "description": "Lightweight extension to scrape data from detail pages only.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://www.sahibinden.com/*",
    "https://*.sahibinden.com/*",
    "https://*.shbdn.com/*",
    "http://localhost:8080/*",
    "http://localhost:8084/*",
    "https://*.adnansenyurt.com/*",
    "https://overpass-api.de/*",
    "https://overpass.kumi.systems/*",
    "https://overpass.openstreetmap.ru/*",
    "https://overpass.nchc.org.tw/*",
    "https://overpass.openstreetmap.fr/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Scrape detail page",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
