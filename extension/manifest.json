{
  "manifest_version": 3,
  "name": "Note Taking",
  "version": "0.2.0",
  "description": "Note Taking",
  "action": {
    "default_title": "Note Taking",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://www.sahibinden.com/*",
    "file://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "https://www.sahibinden.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
