{
  "manifest_version": 3,
  "name": "Sahi Hover Logger",
  "version": "0.0.1",
  "description": "Logs row hover and shows editable notes on sahibinden.com search result rows.",
  "content_scripts": [
    {
      "matches": [
        "https://sahibinden.com/*",
        "http://sahibinden.com/*",
        "https://*.sahibinden.com/*",
        "http://*.sahibinden.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": []
}
